{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend Debugger",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/devserver.py",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "run",
        "--no-debugger", // Prevent built-in debugger from conflicting
        "--no-reload"
      ],
      "jinja": true
      // "autoStartBrowser": false // ? Check back later if you want this
    },
    {
      "name": "Frontend Debugger",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8000/",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    }
  ]
}
