# Exclude files from server version
#syntax is `filename export-ignore` or `folder/ export-ignore`

# Config files
vite.config.mjs export-ignore
.gitignore export-ignore
.pylintrc export-ignore
babel.config.js export-ignore
package.json export-ignore
package-lock.json export-ignore
tsconfig.json export-ignore

# Dev Folders
src/ export-ignore
fyi/ export-ignore

# Database (remote is source of truth)
backend/database/ export-ignore

## EOL to unix, force conversion

# Force LF for all text files
* text=auto eol=lf

# Explicitly set LF for common text file types
*.js eol=lf
*.ts eol=lf
*.jsx eol=lf
*.tsx eol=lf
*.css eol=lf
*.html eol=lf
*.json eol=lf

# Prevent conversion for PowerShell scripts
*.ps1 eol=crlf